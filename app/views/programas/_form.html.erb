<div class="row">
  <div class="mx-auto col-md-6 col-10">
    <%= form_with(model: modelo, local: true,builder: BootstrapFormBuilder) do |form| %>
    <%= render "partials/error_form", :modelo => modelo%>

    <div class="row">
      <%= form.label :nombre %>
      <%= form.text_field :nombre %>
    </div>
    <div class="row">
      <%= form.label :foto %>
      <%= form.text_field :foto %>

    </div>
    <div class="row">
      <%= form.label :descripcion %>
      <%= form.cktext_area :descripcion %>

    </div>
    <br>
    <div class="row">
      <%= form.submit %>
    </div>
    <% end %>
  </div>
</div>
