<div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
  <ol class="carousel-indicators">
    <%indice=0%>
    <% flag =false %>
    <% @carrusels.each do |carrusel| %>
      <% if flag == true %>
        <li data-target="#carouselExampleIndicators" data-slide-to="<%=indice%>"></li>
        <%indice=indice+1%>
      <% else%><!--else if flag == true -->
        <li data-target="#carouselExampleIndicators" data-slide-to="<%=indice%>" class="active"></li>
        <%indice=indice+1%>
        <% flag =true%>
      <%end%><!--end if flag == true -->
    <%end%><!--@carrusels.each do |carrusel|-->
  </ol>
  <div class="carousel-inner">
    <% flag =false %>
    <%contmodal=1%>
    <% @carrusels.each do |carrusel| %>
      <% if flag == true %>
          <div class="carousel-item ">
						<% if carrusel.event_id != nil &&  carrusel.event_id != 1%>
							<% @events.each do |event| %>
								<%if carrusel.event_id == event.id%>
									<%@ActividadModal="ActividadModal"+contmodal.to_s%>
									<%= image_tag "#{carrusel.img}",class: "d-block w-100", data: { target: "##{@ActividadModal}", toggle: "modal"}%>
									<%=render "actividades_academicas/modal", event: event%>
									<%contmodal=contmodal+1%>
								<%end%>
							<%end%>

						<%else%>
							<%if carrusel.url != nil && !carrusel.url.blank?%>

								<%= link_to image_tag("#{carrusel.img}",class: "d-block w-100"),carrusel.url, target: "_blank"%>
							<%else%>
								<%if carrusel.doc != nil%>
									<p>miaw</p>
									<%= link_to image_tag("#{carrusel.img}",class: "d-block w-100"),asset_path(carrusel.doc, skip_pipeline: true), target: "_blank"%>
								<%else%>
								<p>pavo</p>
									<%= image_tag "#{carrusel.img}",class: "d-block w-100"%>
								<%end%>
							<%end%>
						<%end%>

					</div>

      <% else%>
        <div class="carousel-item active">
						<% if carrusel.event_id != nil &&  carrusel.event_id != 1%>
							<% @events.each do |event| %>
								<%if carrusel.event_id == event.id%>
									<%@ActividadModal="ActividadModal"+contmodal.to_s%>
									<%= image_tag "#{carrusel.img}",class: "d-block w-100", data: { target: "##{@ActividadModal}", toggle: "modal"}%>
									<%=render "actividades_academicas/modal", event: event%>
									<%contmodal=contmodal+1%>
								<%end%>
							<%end%>

						<%else%>
							<%if carrusel.url != nil && !carrusel.url.blank?%>
							<p>aqui</p>
								<% link_to image_tag("#{carrusel.img}",class: "d-block w-100"),carrusel.url, target: "_blank"%>
							<%else%>
								<%if carrusel.doc != nil%>

								<%= link_to image_tag("#{carrusel.img}",class: "d-block w-100"),asset_path(carrusel.doc, skip_pipeline: true), target: "_blank"%>
								<%else%>
									<%= image_tag "#{carrusel.img}",class: "d-block w-100"%>
								<%end%>
							<%end%>
						<%end%>
	      	<% flag =true%>
      	</div>
    	<%end%><!-- end if flag == true-->
    <%end%><!--end @images.each do |image|-->
  </div>
  <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="sr-only">Next</span>
  </a>
</div>
