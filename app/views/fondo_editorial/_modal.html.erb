<!-- Modal -->
<div id="<%=@LibroModal%>" class="modal fade">
  <div class="modal-dialog modal-lg" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="tituloModal"><%= libro.titulo %></h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <div class="row">
          <div class="col-md-4">
            <%=image_tag libro.img.url(:original), class:"imagen-modal"%><br>
            <%if !libro.url.blank?%>
            <%= link_to "Comprar",libro.url, target: "_blank"%>
            <%end%>
          </div>
          <div class="col-md-8 descripcion">
              <%=render "/fondo_editorial/descripcion_larga",libro:libro%>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
