<p id="notice"><%= notice %></p>

<h1>Revistas</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>


      <div class="cajarevistas">
    <% @revistas.each do |revista| %>


      <div >
        <%=link_to (image_tag revista.img.url(:revista)), asset_path(revista.pdf, skip_pipeline: true), target: "_blank",styles: "revista" %>
        <% link_to 'Show', revista %>
        <%= link_to 'Edit', edit_revista_path(revista) %>
        <%= link_to 'Destroy', revista, method: :delete, data: { confirm: 'Are you sure?' } %>
      </div>


    <% end %>
    </div>

</table>

