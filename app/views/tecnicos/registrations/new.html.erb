<%if current_admin.try(:is_admin?) or current_admin.try(:is_editor?)%>
<div class="contenedor">
  <div class="row">

      <div class="mx-auto col-md-6 col-10">
    <h2 class="mb-4">Registrarse como <span class="text-capitalize"><%=resource_name%></span></h2>
    <br>
    <br>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name),builder: BootstrapFormBuilder) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
      <div class="row">
        <%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
      </div>

      <div class="row">
        <%= f.label :contraseña %>
        <%= f.password_field :password, autocomplete: "new-password" %>

      </div>

    <div class="row">
      <div class="col-md-12 text-right">
        <% if @minimum_password_length %>

          <em >(<%= @minimum_password_length %>  carácteres mínimo)</em>


        <% end %><br />
      </div>

    </div>

      <div class="row">
        <%= f.label :password_confirmation %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
      </div>

      <div class="row">
        <%= f.submit "Registrar" %>
      </div>
    <%end%>
    </div>
  </div>
  <%= render "tecnicos/shared/links" %>
</div>
<%end%>
