<div class="contenedor">
  <p id="notice"><%= notice %></p>
  <div class="divTitulo">
    <span class="titulo">
      Documentos
    </span>
  </div>
  <br>
  <div class="row">
    <% @documentos.each do |documento| %>

      <div class="col-md-3">
        <%= documento.nombre %>
      </div>
      <div class="col-md-3">
        <%= documento.tipo %>
      </div>
      <div class="col-md-3">
      <%= documento.subtipo %>
      </div>
      <div class="col-md-3">
        <%= documento.anio %>
      </div>
      <div class="col-md-3">
        <%= link_to 'Editar', edit_documento_path(documento),class:"link" %>
        <%= link_to 'Destroy', documento, method: :delete, data: { confirm: 'Esta seguro?' } ,class:"link" %>
      </div>
    <% end %>
  </div>
  <%= link_to 'New Documento', new_documento_path, class:"btn btnActivo" %>
</div>
