<div class="row">
  <div class="mx-auto col-md-6 col-10">
    <%= form_with(model: modelo, local: true,builder: BootstrapFormBuilder) do |form| %>
    <%= render "partials/error_form", :modelo => modelo%>


      <div class="row">
        <%= form.label :nombre %>
        <%= form.text_field :nombre %>
      </div>

      <div class="row">
        <%= form.label :tipo %>
        <%= form.select :tipo, [['Espacio Informativo','Espacio Informativo'],['Procedimientos internos','Procedimientos internos'],['Programas con financiamiento UNAM','Programas con financiamiento UNAM'],['Docencia','Docencia']], { :onchange => "ShowSelected();",id: "tipo", } %>
      </div>

      <div class="row">
        <%= form.label :anio %>
        <%= form.text_field :anio %>
      </div>
      <div class="row">
        <%= form.label :subtipo %>
        <%= form.select :subtipo, [['',''],['Consejo Interno','Consejo Interno'],['Informes y programas de actividades','Informes y programas de actividades'],['Ejercicio presupuestal','Ejercicio presupuestal'],['Documentos oficiales','Documentos oficiales'],['Plan editorial','Plan editorial'],['Actas de Acuerdos del Comité Editorial','Actas de Acuerdos del Comité Editorial'],['Comisiones, licencias y permisos','Comisiones, licencias y permisos'],['Sabático','Sabático'],['Promoción, definitividad y cambio de adscripción','Promoción, definitividad y cambio de adscripción'],['Movilidad entrante','Movilidad entrante'],['Programa de becas','Programa de becas']]%>
      </div>
      <div class="row">
        <%= form.label :pdf %>
        <%= form.file_field :pdf%>
      </div>

      <div class="row">
        <%= form.label :doc %>
        <%= form.file_field :doc%>
      </div>

      <div class="row">
        <%= form.submit %>
      </div>
    <% end %>
  </div>
</div>




