<div class="contenedor">
  <div class="divTitulo">
    <span class="titulo">
      Iniciar Sesión Investigador
    </span>
  </div>
  <br>
  <div class="row">
      <div class="mx-auto col-md-6 col-10">
        <%= devise_error_messages! %>
        <%= form_for(resource, as: resource_name, url: session_path(resource_name),builder: BootstrapFormBuilder) do |f| %>
          <div class="row">
            <%= f.label :email %><br />
            <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
          </div>

          <div class="row">
            <%= f.label :contraseña %><br />
            <%= f.password_field :password %>
          </div>

          <% if devise_mapping.rememberable? %>
            <div class="row">
              <%= f.check_box :remember_me %>
              <%= f.label :remember_me %>
            </div>
          <% end %>
            
          <div class="row text-right">
            <%= f.submit "Ingresar" %>
          </div>
        <% end %>

        <%= render "investigadors/shared/links" %>
        </div>

  </div>

</div>
